<Window
    x:Class="BasicLinkedList.GameEntryUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicLinkedList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel   Orientation="Horizontal" Margin="1,1,1,1">

        <StackPanel Style="{StaticResource StackPanelEKing}" Width ="400" HorizontalAlignment="Left">

        </StackPanel >

        <StackPanel>
            <TextBox x:ConnectionId='2' Style="{StaticResource Header1}"  x:Name="position" Header =" Players in Queue" Width ="300"/>
            <TextBox x:ConnectionId='3' Style="{StaticResource Header1}"  x:Name="lives" Header =" Lives" Width ="300"/>
            <TextBox x:ConnectionId='4' Style="{StaticResource Header1}"  x:Name="swords" Header =" Basic Swords" Width ="300"/>

        </StackPanel>



    </StackPanel>
</Window>


<Application
    x:Class="BasicLinkedList.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicLinkedList"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->


            <ImageBrush x:Key="SpBg" ImageSource="Images/Elves.JPG" Stretch="UniformToFill" AlignmentY="Bottom" />
            <ImageBrush x:Key ="SpEBg" ImageSource="Images/King.JPG"/>

            <Style x:Key="StackPanelBg" TargetType="StackPanel">
                <Setter Property="Background" Value="{StaticResource SpBg}" />
            </Style>

            <Style x:Key="StackPanelEKing" TargetType="StackPanel">
                <Setter Property="Background" Value="{StaticResource SpEBg}" />
            </Style>

            <Style x:Key="StackPanelColor" TargetType="StackPanel">
                <Setter Property="Background" Value="Tranperant"/>
            </Style>

            <Style x:Key="btnStyle" TargetType="Button">
                <Setter Property="Background" Value="Black" />
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="Header1" TargetType="TextBox">
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontWeight" Value="ExtraBold" />
            </Style>


            <Style x:Key="storText" TargetType="TextBox">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="Calibri"/>
            </Style>
        </ResourceDictionary>
       
    </Application.Resources>

       

  
</Application>

